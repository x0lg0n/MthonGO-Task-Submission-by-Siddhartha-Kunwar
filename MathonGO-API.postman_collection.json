{
  "info": {
    "_postman_id": "b5e7b5e7-b5e7-b5e7-b5e7-b5e7b5e7b5e7",
    "name": "MathonGO API",
    "description": "Collection for testing the MathonGO Chapters API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Chapters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/chapters",
          "host": ["{{baseUrl}}"],
          "path": ["chapters"]
        },
        "description": "Fetch all chapters with default pagination (10 items per page)"
      },
      "response": []
    },
    {
      "name": "Get Chapters with Filters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/chapters?class=Class 11&subject=Physics&weakChapters=true&page=1&limit=5",
          "host": ["{{baseUrl}}"],
          "path": ["chapters"],
          "query": [
            {
              "key": "class",
              "value": "Class 11"
            },
            {
              "key": "subject",
              "value": "Physics"
            },
            {
              "key": "weakChapters",
              "value": "true"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "5"
            }
          ]
        },
        "description": "Fetch chapters with filters for class, subject, and weak chapters"
      },
      "response": []
    },
    {
      "name": "Get Chapter by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/chapters/{{chapterId}}",
          "host": ["{{baseUrl}}"],
          "path": ["chapters", "{{chapterId}}"]
        },
        "description": "Fetch a specific chapter by its ID"
      },
      "response": []
    },
    {
      "name": "Upload Chapters (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "/path/to/mockdata.txt"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/chapters",
          "host": ["{{baseUrl}}"],
          "path": ["chapters"]
        },
        "description": "Upload chapters from a JSON file (admin only)"
      },
      "response": []
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "your-secret-admin-token",
      "type": "string"
    },
    {
      "key": "chapterId",
      "value": "replace-with-actual-chapter-id",
      "type": "string"
    }
  ]
}